---
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>My Travels — Original Design</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@400;600&display=swap" rel="stylesheet" />
  </head>
  <body>
    <div class="landing-header">
      <h1>My Travels</h1>
      <p class="tagline">A collection of journeys, itineraries, and memories from around the world.</p>
    </div>

    <div class="divider"></div>

    <p class="section-label">Journeys</p>

    <div class="travel-grid">
      <a href={`${base}/japan2026/`} class="travel-card">
        <span class="card-flag">日本</span>
        <span class="card-destination">Japan</span>
        <span class="card-dates">September 19 – October 3, 2026</span>
        <span class="card-route">Tokyo · Hakone · Kyoto · Osaka</span>
        <span class="card-arrow">→</span>
      </a>
    </div>

    <footer class="landing-footer">
      <p>Built with Astro</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --land-bg: #0a0a0a;
    --land-surface: #141414;
    --land-border: #222222;
    --land-border-hover: #333333;
    --land-text: #e0e0e0;
    --land-text-muted: #888888;
    --land-text-dim: #555555;
    --land-accent: #d4d4d4;
    --land-white: #fafafa;
    --font-display: 'Playfair Display', Georgia, serif;
    --font-body: 'Inter', -apple-system, sans-serif;
  }

  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
  html { font-size: 16px; }

  body {
    font-family: var(--font-body);
    background: var(--land-bg);
    color: var(--land-text);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
  }

  .landing-header {
    padding: 4rem 2rem 2rem;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .landing-header h1 {
    font-family: var(--font-display);
    font-size: 2.8rem;
    font-weight: 400;
    color: var(--land-white);
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  .landing-header .tagline {
    font-size: 1rem;
    font-weight: 300;
    color: var(--land-text-muted);
    letter-spacing: 0.03em;
    max-width: 480px;
    margin: 0 auto;
  }

  .divider {
    width: 40px;
    height: 1px;
    background: var(--land-border-hover);
    margin: 2.5rem auto;
  }

  .section-label {
    text-align: center;
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--land-text-dim);
    margin-bottom: 2rem;
  }

  .travel-grid {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem 4rem;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .travel-card {
    display: block;
    text-decoration: none;
    color: var(--land-text);
    background: var(--land-surface);
    border: 1px solid var(--land-border);
    border-radius: 8px;
    padding: 2rem;
    transition: border-color 0.3s, transform 0.2s, box-shadow 0.3s;
    position: relative;
    overflow: hidden;
  }

  .travel-card:hover {
    border-color: var(--land-border-hover);
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
  }

  .travel-card .card-flag {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }

  .travel-card .card-destination {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--land-white);
    margin-bottom: 0.3rem;
  }

  .travel-card .card-dates {
    font-size: 0.8rem;
    color: var(--land-text-muted);
    margin-bottom: 0.75rem;
    letter-spacing: 0.02em;
  }

  .travel-card .card-route {
    font-size: 0.85rem;
    color: var(--land-text-dim);
    line-height: 1.5;
  }

  .travel-card .card-arrow {
    position: absolute;
    top: 2rem;
    right: 2rem;
    font-size: 1.2rem;
    color: var(--land-text-dim);
    transition: color 0.3s, transform 0.3s;
  }

  .travel-card:hover .card-arrow {
    color: var(--land-text);
    transform: translateX(3px);
  }

  .landing-footer {
    margin-top: auto;
    text-align: center;
    padding: 2rem;
    font-size: 0.75rem;
    color: var(--land-text-dim);
    border-top: 1px solid var(--land-border);
  }

  @media (max-width: 640px) {
    .landing-header { padding: 3rem 1.5rem 1.5rem; }
    .landing-header h1 { font-size: 2rem; }
    .travel-grid { padding: 0 1.5rem 3rem; grid-template-columns: 1fr; }
  }
</style>
